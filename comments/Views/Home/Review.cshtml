@model BusinessLayer.Contact

@{
    ViewBag.Title = "Review";
}

<h2>Review</h2>
<!-- Display form submission for review-->

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div>
        <h4>Please confirm submission</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FIRST_NAME) @Html.DisplayFor(model => model.MIDDLE_NAME) @Html.DisplayFor(model => model.LAST_NAME)
            </dd>
            @if (Model.TITLE != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.TITLE)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TITLE)
                </dd>
            }
            @if (Model.AGENCY != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.AGENCY)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AGENCY)
                </dd>
            }
            <dt>
                @Html.DisplayNameFor(model => model.ADDRESS)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ADDRESS)
            </dd>

            <dt>

            </dt>

            <dd>
                @Html.DisplayFor(model => model.CITY) @Html.DisplayFor(model => model.STATE), @Html.DisplayFor(model => model.ZIP)
            </dd>


            @if (Model.DAY_PHONE != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.DAY_PHONE)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DAY_PHONE)
                </dd>
            }
            @if (Model.ALT_PHONE != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.ALT_PHONE)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ALT_PHONE)
                </dd>
            }
            @if (Model.FAX != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.FAX)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FAX)
                </dd>
            }
            @if (Model.EMAIL != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.EMAIL)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.EMAIL)
                </dd>
            }
            <dt>
                @Html.DisplayNameFor(model => model.CONTACT_LIST)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CONTACT_LIST)
            </dd>

            @if (Session["method"].ToString() == "Comment")
            {
                <dt>
                    @Html.DisplayNameFor(model => model.PUBLIC_COMMENT)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PUBLIC_COMMENT)
                </dd>
            }
        </dl>
    </div>
    <!-- -JAH: 6/17: Why is this repeated? -->
    @Html.HiddenFor(model => model.FIRST_NAME)
    @Html.HiddenFor(model => model.MIDDLE_NAME)
    @Html.HiddenFor(model => model.LAST_NAME)
    @Html.HiddenFor(model => model.TITLE)
    @Html.HiddenFor(model => model.AGENCY)
    @Html.HiddenFor(model => model.ADDRESS)
    @Html.HiddenFor(model => model.CITY)
    @Html.HiddenFor(model => model.STATE)
    @Html.HiddenFor(model => model.ZIP)
    @Html.HiddenFor(model => model.DAY_PHONE)
    @Html.HiddenFor(model => model.ALT_PHONE)
    @Html.HiddenFor(model => model.FAX)
    @Html.HiddenFor(model => model.EMAIL)
    @Html.HiddenFor(model => model.CONTACT_LIST)
    @Html.HiddenFor(model => model.PUBLIC_COMMENT)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="submitButton" value="Edit" class="btn btn-default" />
            <input type="submit" name="submitButton" value="Submit" class="btn btn-default" />
        </div>
    </div>
}
